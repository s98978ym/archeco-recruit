    careerTab.classList.remove('border-copper', 'text-copper');
  }
}

// Modal controls
function openModal(name) {
  document.getElementById('modal-' + name).classList.add('active');
  document.body.style.overflow = 'hidden';
}
function closeModal(name) {
  document.getElementById('modal-' + name).classList.remove('active');
  document.body.style.overflow = '';
  // Reset entry forms if closing entry modals
  if (name === 'entry-career' || name === 'entry-intern') {
    var type = name.replace('entry-', '');
    document.getElementById('entry-form-' + type).classList.remove('hidden');
    document.getElementById('entry-success-' + type).classList.add('hidden');
    document.getElementById('entry-form-' + type).reset();
  }
}

// Form submission handler
function handleSubmit(e, type) {
  setTimeout(function() {
    document.getElementById('entry-form-' + type).classList.add('hidden');
    document.getElementById('entry-success-' + type).classList.remove('hidden');
  }, 500);
}

// Scroll animations
const observer = new IntersectionObserver(function(entries) {
  entries.forEach(function(entry) {
    if (entry.isIntersecting) {
      entry.target.classList.add('visible');
    }
  });
}, { threshold: 0.1 });

document.querySelectorAll('.fade-in').forEach(function(el) {
  observer.observe(el);
});

// Close modals with Escape key
document.addEventListener('keydown', function(e) {
  if (e.key === 'Escape') {
    ['entry-career', 'entry-intern', 'chat', 'company'].forEach(function(name) {
      closeModal(name);
    });
  }
});
