---
import { getBlogs } from '../lib/microcms';
import type { Blog } from '../lib/microcms';

let featuredBlogs: Blog[] = [];
let latestBlogs: Blog[] = [];
try {
  const featuredRes = await getBlogs({ filters: 'is_featured[equals]true', limit: 3 });
  featuredBlogs = featuredRes.contents;
  const latestRes = await getBlogs({ orders: '-publishedAt', limit: 4 });
  latestBlogs = latestRes.contents;
} catch (e) {
  // microCMS fetch may fail if no content exists yet
}
